@model LogReg

@{
    ViewData["Title"] = "A Web Page";
}

<div id="container">
    <div class="text-center">
        <h1 class="display-4">Register to this Cool Site!</h1>
        <a href="/">Register</a>
    </div>
    <div id="row">
        <div id="form" class="mx-auto">
            <form asp-action="/success" asp-controller="Home" method="post">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input type="text" asp-for="Email" id="" class="form-control">
                    <span style="color:Red;" asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="text" asp-for="Password" id="" class="form-control">
                    <span style="color:Red;" asp-validation-for="Password"></span>
                </div>
                <button type="submit">Log Me In Now!</button>
            </form>
        </div>
    </div>
</div>